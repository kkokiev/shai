.project-menu-mob
	display none
	width 100%
	table-layout fixed
	
	+below(tablet)
		display table
	
	&__col
		display table-cell
		width 50px
		vertical-align middle
		text-align center
		
		&_mid
			width auto
			padding 0 10px
	span
		font-family font-1
		font-size 1.8rem
		line-height 1.2em
		letter-spacing 0.06em
		
	&__btn
		display inline-block
		height 25px
		width 15px
		text-decoration none
		text-indent 100%
		white-space nowrap
		overflow hidden
		
		&:hover,
		&:focus
			opacity .6
		
		&_prev
			background transparent url(images/icon-arrow-left.png) 0 0 no-repeat
			background-size cover
			
		&_next
			background transparent url(images/icon-arrow-right.png) 0 0 no-repeat
			background-size cover
			
.project-menu-mob_project-page
	+below(large)
		display table
		margin-bottom 20px
		
	.project-menu-mob__col
		&:first-child
			text-align left
			
		&:last-child
			text-align right
			
	h1
		font-family font-4
		font-size 3rem
		line-height 1.1em
		text-transform uppercase
		
		+below(480px)
			font-size 2.5rem