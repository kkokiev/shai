.header
	max-height 100vh
	overflow-y auto
	padding 20px 57px 14px
	background #181515
	clearfix()
	
	+below(900px)
		padding 20px 15px 14px
	
	&__logo
		float left
		width 50%
		
		+below(800px)
			width 90%
			padding-top 1px
			
		+below(480px)
			padding-top 3px
		
	&__nav-btn
		float right
		display none
		text-align right
		
		+below(800px)
			display block
			width 10%
		
	&__nav
		display block
		float right
		width 50%
		text-align right
		
		+below(800px)
			display none
			float none
			width 100%
			text-align left
			clear both