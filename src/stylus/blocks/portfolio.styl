.portfolio
	padding 15px 0
	width 100%
	overflow hidden
	background light
	
	&__grid
		margin 0 -5px
		font-size 0
		
		.portfolio__col
			display inline-block
			width 25%
			padding 5px
		
	&__grid-2
		font-size 0
		
		.portfolio__col
			display inline-block
			width 50%
			
	&__grid-3
		font-size 0
		
		.portfolio__col
			display inline-block
			width 25%
			padding 5px
			
	&__grid-4
		font-size 0
		
		.portfolio__col
			display inline-block
			width 25%
			
	&__grid-5
		clearfix()
		
		.portfolio__col
			z-index 1
			position relative
			float left
			
			&_1
				width 50%
		
			&_2
				width 25%
			
			&_3
				width 100%
			
	&__grid-icon
		z-index 20
		position absolute
		display block
		height 30px
		width 30px
		background transparent url(images/plus.svg) 0 0 no-repeat
		
		&_t-l
			top -15px
			left -15px
		&_t-r
			top -15px
			right -15px
			
		&_t-c
			top -15px
			left 0
			right 0
			margin 0 auto
			
		&_b-l
			bottom -15px
			left -15px
			
		&_b-r
			bottom -15px
			right -15px
			
		&_c-l
			left -15px
			top 0
			bottom 0
			margin auto 0