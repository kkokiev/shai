.portfolio
	padding 15px 0
	width 100%
	overflow hidden
	background light
	perspective 1300px
	
	&__grid
		font-size 0
		
		.portfolio__col
			display inline-block
			width 25%
			
			+below(tablet)
				width 50%
		
	&__grid-2
		font-size 0
		
		.portfolio__col
			display inline-block
			width 50%
			
			+below(tablet)
				width 100%
			
	&__grid-3
		clearfix()
		
		.portfolio__col
			z-index 1
			position relative
			float left
			
			&_1
				width 50%
				
				+below(tablet)
					width 100%
					
			&_1-half
				width 50%
		
			&_2
				width 25%
				
				+below(tablet)
					width 50%
			
			&_3
				width 100%
			
	&__grid-icon
		z-index 20
		position absolute
		display block
		height 30px
		width 30px
		background transparent url(images/plus.svg) 0 0 no-repeat
		
		+below(tablet)
			display none
		
		&_t-l
			top -15px
			left -15px
		&_t-r
			top -15px
			right -15px
			
		&_t-c
			top -15px
			left 0
			right 0
			margin 0 auto
			
		&_b-l
			bottom -15px
			left -15px
			
		&_b-r
			bottom -15px
			right -15px
			
		&_c-l
			left -15px
			top 0
			bottom 0
			margin auto 0
			

.portfolio
	
	&__col
		opacity 0

.portfolio_show
	
	.portfolio__col
		animation showOpacity 1.5s ease-in-out forwards
		
		&:nth-child(2)
			animation-delay .1s
			
		&:nth-child(5)
			animation-delay .2s
			
		&:nth-child(3)
			animation-delay .3s
			
		&:nth-child(6)
			animation-delay .4s
			
		&:nth-child(4)
			animation-delay .5s
			
		&:nth-child(9)
			animation-delay .6s
			
		&:nth-child(7)
			animation-delay .7s
			
		&:nth-child(10)
			animation-delay .8s
			
		&:nth-child(13)
			animation-delay .9s
			
		&:nth-child(8)
			animation-delay 1s
			
		&:nth-child(11)
			animation-delay 1.1s
			
		&:nth-child(14)
			animation-delay 1.2s
			
		&:nth-child(12)
			animation-delay 1.3s
			
		&:nth-child(15)
			animation-delay 1.4s
			
		&:nth-child(16)
			animation-delay 1.5s
			
		&:nth-child(n + 17)
			animation-delay 1.6s
			
		&:nth-child(n + 21)
			animation-delay 1.7s

@keyframes showOpacity {
	0% { }
	100% { opacity: 1; }
}