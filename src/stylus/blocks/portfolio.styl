.portfolio
	padding 15px 0
	width 100%
	overflow hidden
	background light
	
	&__grid
		font-size 0
		
		.portfolio__col
			display inline-block
			width 25%
			
			+below(tablet)
				width 50%
		
	&__grid-2
		font-size 0
		
		.portfolio__col
			display inline-block
			width 50%
			
			+below(tablet)
				width 100%
			
	&__grid-3
		clearfix()
		
		.portfolio__col
			z-index 1
			position relative
			float left
			
			&_1
				width 50%
				
				+below(tablet)
					width 100%
					
			&_1-half
				width 50%
		
			&_2
				width 25%
				
				+below(tablet)
					width 50%
			
			&_3
				width 100%
			
	&__grid-icon
		z-index 20
		position absolute
		display block
		height 30px
		width 30px
		background transparent url(images/plus.svg) 0 0 no-repeat
		
		+below(tablet)
			display none
		
		&_t-l
			top -15px
			left -15px
		&_t-r
			top -15px
			right -15px
			
		&_t-c
			top -15px
			left 0
			right 0
			margin 0 auto
			
		&_b-l
			bottom -15px
			left -15px
			
		&_b-r
			bottom -15px
			right -15px
			
		&_c-l
			left -15px
			top 0
			bottom 0
			margin auto 0