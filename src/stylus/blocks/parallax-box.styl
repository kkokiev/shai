.parallax-box
	display table
	width 100%
	height 66vh
	min-height 180px
	overflow hidden
	color main-dark
	background-position: center center
	background-repeat no-repeat
	background-size cover
	
	&__inner
		display table-cell
		vertical-align middle
		text-align center
		
	&__btn
		display inline-block
		padding 16px 20px 15px
		color main-dark
		font-family font-2
		font-size 1.8rem
		line-height 1.1em
		letter-spacing 0.04em
		text-decoration none
		text-transform uppercase
		border 1px solid main-dark
		white-space nowrap
		overflow hidden
		text-overflow ellipsis
		
		&:hover,
		&:focus
			color light
			background main-dark
			
		&_alt
			color light
			border 1px solid light
			
			&:hover,
			&:focus
				color main-dark
				background light
			
	h3
		margin-bottom 24px
		font-family font-3
		font-size 4rem
		line-height 1.2em
		text-transform uppercase
		
	p
		margin-bottom 36px
		font-family font-2
		font-size 2rem
		line-height 1.2em