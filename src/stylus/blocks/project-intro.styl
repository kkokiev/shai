.project-intro
	
	&__row
		clearfix()
		
		+below(large)
			max-width 600px
			margin 0 auto
		
	&__col-1
		float left
		width 23%
		padding-right 20px
		
		+below(large)
			width 100%
			padding-right 0
			padding-bottom 15px

	&__col-2
		float left
		width 54%
		
		+below(large)
			width 100%
		
	p
		margin-bottom 40px
		font-family font-7
		font-size 1.2rem
		line-height 1.4em
		
		+below(large)
			margin-bottom 15px
		
		&:last-child
			margin-bottom 0
		
	img
		width 100%