.project-menu
	display inline-block
	clearfix()
	
	> li
		float left
		margin-right 20px
		
		&:last-child
			margin-right 0
		
		> a
			display block
			color main
			font-family font-1
			font-size 1.8rem
			line-height 1.2em
			lettter-spacing 0.06
			text-transform uppercase
			text-decoration none
			border-bottom 2px solid transparent
			
			&:hover,
			&:focus
				border-bottom 1px solid main
			
	> li.active
		
		> a
			border-bottom 2px solid main