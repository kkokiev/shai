.footer
	position absolute
	left 0
	right 0
	bottom 0
	padding 40px 54px 40px
	color light
	background main
	clearfix()
	
	+below(large)
		padding 40px 30px 
	
		
	&__col
		padding-top 5px
		padding-bottom 10px
		
		+below(large)
			padding 0
		
	&__contact-wrap
		float left
		width 28%
		padding-right 45px
		
		+below(large)
			width 50%
			
		+below(tablet)
			width 100%
			padding-right 0
			margin-bottom 40px
		
	&__work-form-wrap
		float right
		width 28%
		padding-left 10px
		border-left 1px solid main-light
		
		+below(large)
			width 50%
			margin-bottom 40px
			padding-left 0
			border-left 0
			
		+below(tablet)
			width 100%
		
	&__contacts-wrap
		float left
		width 44%
		
		+below(large)
			width 100%
		
	&__work-form
		padding-top 90px
		
		+below(tablet)
			padding-top 0
		
	&__title
		margin-bottom 15px
		font-family font-1
		font-size 1.6rem
		line-height 1em
		letter-spacing .1em
		text-transform uppercase
		
		+below(tablet)
			margin-bottom 20px