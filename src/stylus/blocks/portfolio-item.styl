.portfolio-item
	
	&__link
		position relative
		display block
	
	&__img
		width 100%
		
	&__overlay
		display block
		padding 10px
		position absolute
		top 0
		left 0
		right 0
		bottom 0
		background light
		opacity 0
		tr(.3s)
		
		&:hover
			opacity .8
			
	&__text-wrap
		display table
		height 100%
		width 100%
	
	&__text-wrap-inner
		display table-cell
		height 100%
		vertical-align middle
		text-align center
		
	&__text
		display inline-block
		color main
		font-family font-1
		font-size 1.5rem
		line-height 1.2em
		letter-spacing 0.06em
		border-bottom 2px solid main
		